        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="inputSerial" promptText="Serial Number (XXXXXXXXXX)" GridPane.rowIndex="1" />
            <TextField fx:id="inputValue" promptText="Value" />
            <TextField fx:id="inputName" layoutX="10.0" layoutY="185.0" promptText="Name (2-256 characters)" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </right>
